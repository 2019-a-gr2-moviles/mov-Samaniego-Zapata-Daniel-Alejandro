<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#000001">
    <TextView
            android:text="Envíe sus fotos a los desafíos fotográficos diarios y reciba comentarios de millones de personas como usted que simplemente les encanta tomar fotos."
            android:layout_width="315dp"
            android:layout_height="98dp"
            android:id="@+id/txt_descripcionAsunto"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" android:layout_marginTop="96dp"
            android:textColorHint="#FDFDFE" android:background="#00FDFDFE" android:textColor="#FDFDFE"/>
    <Button
            android:text="Ingresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_ingresar" app:layout_constraintStart_toStartOf="@+id/txt_descripcionAsunto"
            app:layout_constraintEnd_toEndOf="@+id/txt_descripcionAsunto" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_descripcionAsunto" android:textColorHint="#FBFCFD"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/gurushots"
            android:id="@+id/imageView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="140dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.497"/>

</android.support.constraint.ConstraintLayout>