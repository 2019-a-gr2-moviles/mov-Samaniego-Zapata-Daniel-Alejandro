<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#28000001">
    <TextView
            android:text="GuruShots"
            android:layout_width="159dp"
            android:layout_height="41dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="88dp" android:textStyle="bold"
            android:textSize="24sp" android:gravity="center"
            android:id="@+id/txt_titulo"
    />
    <TextView
            android:text="Envíe sus fotos a los desafíos fotográficos diarios y reciba comentarios de millones de personas como usted que simplemente les encanta tomar fotos."
            android:layout_width="315dp"
            android:layout_height="91dp"
            android:id="@+id/txt_descripcionAsunto" app:layout_constraintStart_toStartOf="@+id/txt_titulo"
            app:layout_constraintEnd_toEndOf="@+id/txt_titulo"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_titulo"/>
    <Button
            android:text="Ingresar"
            android:layout_width="93dp"
            android:layout_height="85dp"
            android:id="@+id/btn_ingresar"
            android:drawableBottom="@mipmap/gs" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/txt_descripcionAsunto"
            app:layout_constraintEnd_toEndOf="@+id/txt_descripcionAsunto" android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_descripcionAsunto"/>
</android.support.constraint.ConstraintLayout>