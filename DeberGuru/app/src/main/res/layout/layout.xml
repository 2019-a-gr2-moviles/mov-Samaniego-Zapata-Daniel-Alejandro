<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="393dp"
            android:layout_height="126dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp"
            android:id="@+id/relative_ly">


        <TextView
                android:text="TextView"
                android:layout_width="277dp"
                android:layout_height="29dp" android:id="@+id/txt_nombre" android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" android:layout_marginRight="9dp"
                android:layout_marginEnd="9dp" android:layout_marginTop="6dp" android:layout_alignParentTop="true"
                android:textStyle="bold|italic"/>
        <TextView
                android:text="TextView"
                android:layout_width="275dp"
                android:layout_height="40dp" android:id="@+id/txt_descripcionAsunto"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:layout_alignRight="@+id/txt_titulo_img" android:layout_alignEnd="@+id/txt_titulo_img"
                android:layout_marginTop="9dp" android:layout_below="@+id/txt_titulo_img"
                android:layout_marginLeft="-2dp"
                android:layout_marginStart="-2dp" android:layout_alignLeft="@+id/txt_titulo_img"
                android:layout_alignStart="@+id/txt_titulo_img" android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="279dp"
                android:layout_height="25dp" android:id="@+id/txt_titulo_img"
                android:layout_marginRight="-2dp"
                android:layout_marginEnd="-2dp" android:layout_alignRight="@+id/txt_nombre"
                android:layout_alignEnd="@+id/txt_nombre" android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp" android:layout_alignLeft="@+id/txt_nombre"
                android:layout_alignStart="@+id/txt_nombre" android:layout_marginTop="9dp"
                android:layout_below="@+id/txt_nombre"/>
        <view
                class="android.view.View"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#E6E4E2" android:id="@+id/view"/>
        <ImageView
                android:layout_width="99dp"
                android:layout_height="101dp" app:srcCompat="@mipmap/gs" android:id="@+id/imgGuru"
                android:layout_alignParentStart="true" android:layout_marginLeft="2dp" android:layout_marginStart="2dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="12dp"
                android:layout_alignParentTop="true" android:layout_alignParentBottom="true"
                android:layout_marginBottom="13dp"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>