<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="394dp"
            android:layout_height="119dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp"
            android:id="@+id/relative_ly">

        <ImageView
                android:layout_width="71dp"
                android:layout_height="71dp" app:srcCompat="@mipmap/gmsj" android:id="@+id/imageGuru"
                android:scaleType="centerCrop" android:layout_alignParentBottom="true"
                android:layout_marginBottom="23dp" android:layout_marginTop="25dp"
                android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:layout_marginLeft="19dp" android:layout_marginStart="19dp" android:layout_alignParentLeft="true"
                android:layout_toStartOf="@+id/txt_descripcionAsunto" android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp" android:layout_toLeftOf="@+id/txt_descripcionAsunto"/>
        <TextView
                android:text="TextView"
                android:layout_width="277dp"
                android:layout_height="29dp" android:id="@+id/txt_nombre" android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" android:layout_marginRight="9dp"
                android:layout_marginEnd="9dp" android:layout_marginTop="6dp" android:layout_alignParentTop="true"
                android:textStyle="bold|italic"/>
        <TextView
                android:text="TextView"
                android:layout_width="278dp"
                android:layout_height="30dp" android:id="@+id/txt_descripcionAsunto"
                android:layout_marginRight="0dp"
                android:layout_marginEnd="0dp" android:layout_marginTop="11dp" android:layout_below="@+id/txt_nombre"
                android:layout_marginLeft="-1dp" android:layout_marginStart="-1dp"
                android:layout_alignLeft="@+id/txt_nombre" android:layout_alignStart="@+id/txt_nombre"
                android:layout_alignRight="@+id/txt_nombre" android:layout_alignEnd="@+id/txt_nombre"/>
        <TextView
                android:text="TextView"
                android:layout_width="274dp"
                android:layout_height="26dp" android:id="@+id/txt_pais"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp" android:layout_alignRight="@+id/txt_descripcionAsunto"
                android:layout_alignEnd="@+id/txt_descripcionAsunto" android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp" android:layout_alignLeft="@+id/txt_descripcionAsunto"
                android:layout_alignStart="@+id/txt_descripcionAsunto" android:layout_marginTop="11dp"
                android:layout_below="@+id/txt_descripcionAsunto"/>
        <view
                class="android.view.View"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#E6E4E2" android:id="@+id/view"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>