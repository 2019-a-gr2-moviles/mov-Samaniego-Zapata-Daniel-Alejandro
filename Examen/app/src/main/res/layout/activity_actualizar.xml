<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActualizarActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtGraduadoAct"
            app:layout_constraintStart_toStartOf="@+id/txtSemestreActual"
            app:layout_constraintEnd_toEndOf="@+id/txtSemestreActual" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtSemestreActual"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtFechaNacimiento" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imput_Apellido"
            app:layout_constraintStart_toStartOf="@+id/imput_Apellido" app:layout_constraintEnd_toEndOf="@+id/imput_Apellido"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/imput_Apellido" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/imput_Nombre"
            app:layout_constraintStart_toStartOf="@+id/imput_Nombre" app:layout_constraintEnd_toEndOf="@+id/imput_Nombre"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/imput_Nombre" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Eliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEliminar"
            app:layout_constraintStart_toStartOf="@+id/btnActualizar"
            app:layout_constraintEnd_toEndOf="@+id/btnActualizar" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/btnActualizar"/>
    <Button
            android:text="Actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnActualizar"
            app:layout_constraintStart_toStartOf="@+id/txtGraduadoAct"
            app:layout_constraintEnd_toEndOf="@+id/txtGraduadoAct" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txtGraduadoAct" app:layout_constraintHorizontal_bias="0.495"/>
    <Button
            android:text="Crear Materia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCrearMateria"
            app:layout_constraintStart_toStartOf="@+id/btnEliminar"
            app:layout_constraintEnd_toEndOf="@+id/btnEliminar" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/btnEliminar" app:layout_constraintHorizontal_bias="0.492"/>
    <Button
            android:text="Gestionar Materia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGestionarMateria"
            app:layout_constraintStart_toStartOf="@+id/btnCrearMateria"
            app:layout_constraintEnd_toEndOf="@+id/btnCrearMateria" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCrearMateria" app:layout_constraintHorizontal_bias="0.515"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtSemestreActual"
            app:layout_constraintStart_toStartOf="@+id/txtFechaNacimiento"
            app:layout_constraintEnd_toEndOf="@+id/txtFechaNacimiento" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtFechaNacimiento"/>
    <Button
            android:text="MenÃº"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMenuRetorno"
            tools:layout_editor_absoluteY="623dp"
            tools:layout_editor_absoluteX="161dp" android:visibility="invisible"/>
</android.support.constraint.ConstraintLayout>