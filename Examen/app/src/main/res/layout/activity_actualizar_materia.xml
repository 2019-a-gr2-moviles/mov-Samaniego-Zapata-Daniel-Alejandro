<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActualizarMateriaActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtnumeroMateria" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtCodigo" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtnumeroMateria"
            app:layout_constraintEnd_toEndOf="@+id/txtnumeroMateria" app:layout_constraintStart_toStartOf="@+id/txtnumeroMateria"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtDescripcion" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCodigo"
            app:layout_constraintEnd_toEndOf="@+id/txtCodigo" app:layout_constraintStart_toStartOf="@+id/txtCodigo"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtActivo"
            app:layout_constraintEnd_toEndOf="@+id/txtDescripcion" app:layout_constraintStart_toStartOf="@+id/txtDescripcion"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtDescripcion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtFechaNacimiento"
            app:layout_constraintEnd_toEndOf="@+id/txtActivo" app:layout_constraintStart_toStartOf="@+id/txtActivo"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtActivo"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtHorasSemanales"
            app:layout_constraintEnd_toEndOf="@+id/txtFechaNacimiento" app:layout_constraintStart_toStartOf="@+id/txtFechaNacimiento"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtFechaNacimiento"/>
    <Button
            android:text="@string/btnActualizarMateria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnActualizarMateria" app:layout_constraintStart_toStartOf="@+id/txtHorasSemanales"
            app:layout_constraintEnd_toEndOf="@+id/txtHorasSemanales" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/txtHorasSemanales"/>
    <Button
            android:text="@string/btnEliminarMateria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEliminarMateria" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnActualizarMateria"
            app:layout_constraintEnd_toEndOf="@+id/btnActualizarMateria"
            app:layout_constraintStart_toStartOf="@+id/btnActualizarMateria"/>
</android.support.constraint.ConstraintLayout>