<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IngresarActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/imput_Apellido" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/imput_Nombre"
            app:layout_constraintEnd_toEndOf="@+id/imput_Nombre"
            app:layout_constraintStart_toStartOf="@+id/imput_Nombre" android:layout_marginStart="3dp"
            android:hint="Apellidos" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="@string/btnGuardarEstudiante"
            android:layout_width="204dp"
            android:layout_height="63dp"
            android:id="@+id/btnGuardarEstudiante"
            app:layout_constraintEnd_toEndOf="@+id/txtGraduado"
            app:layout_constraintStart_toStartOf="@+id/txtGraduado" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/txtGraduado" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="@string/btnCancelarEstudiante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancelarEstudiante"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/btnGuardarEstudiante"
            app:layout_constraintStart_toStartOf="@+id/btnGuardarEstudiante"
            app:layout_constraintEnd_toEndOf="@+id/btnGuardarEstudiante"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/imput_Nombre" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Nombres"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtSemestreActual"
            android:hint="Semestre actual"
            app:layout_constraintStart_toStartOf="@+id/txtFechaNacimiento"
            app:layout_constraintEnd_toEndOf="@+id/txtFechaNacimiento"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/txtFechaNacimiento"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtGraduado"
            app:layout_constraintStart_toStartOf="@+id/txtSemestreActual"
            app:layout_constraintEnd_toEndOf="@+id/txtSemestreActual"
            app:layout_constraintTop_toBottomOf="@+id/txtSemestreActual" android:hint="Graduado"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="40dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtFechaNacimiento"
            app:layout_constraintStart_toStartOf="@+id/imput_Apellido"
            app:layout_constraintEnd_toEndOf="@+id/imput_Apellido"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/imput_Apellido"
            android:hint="Fecha Nacimiento" app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>