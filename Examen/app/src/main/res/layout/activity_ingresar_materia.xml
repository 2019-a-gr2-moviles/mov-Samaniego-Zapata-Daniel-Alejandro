<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IngresarMateriaActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtCodigo"
            app:layout_constraintStart_toStartOf="@+id/txtnumeroMateria"
            app:layout_constraintEnd_toEndOf="@+id/txtnumeroMateria"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtnumeroMateria"
            android:hint="Codigo"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtDescripcion"
            app:layout_constraintStart_toStartOf="@+id/txtCodigo" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCodigo"
            app:layout_constraintEnd_toEndOf="@+id/txtCodigo" android:hint="Descripcion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtActivo" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtDescripcion"
            app:layout_constraintStart_toStartOf="@+id/txtDescripcion"
            app:layout_constraintEnd_toEndOf="@+id/txtDescripcion" android:hint="Activo"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtFechaNacimiento"
            app:layout_constraintStart_toStartOf="@+id/txtActivo"
            app:layout_constraintEnd_toEndOf="@+id/txtActivo"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtActivo"
            android:hint="Fecha Creacion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtHorasSemanales" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtFechaNacimiento"
            app:layout_constraintStart_toStartOf="@+id/txtFechaNacimiento"
            app:layout_constraintEnd_toEndOf="@+id/txtFechaNacimiento" android:hint="Horas semanales"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtnumeroMateria" android:layout_marginTop="124dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Numero Materia"/>
    <Button
            android:text="Guardar Materia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGuardar" app:layout_constraintStart_toStartOf="@+id/txtHorasSemanales"
            app:layout_constraintEnd_toEndOf="@+id/txtHorasSemanales"
            app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/txtHorasSemanales"/>
</android.support.constraint.ConstraintLayout>