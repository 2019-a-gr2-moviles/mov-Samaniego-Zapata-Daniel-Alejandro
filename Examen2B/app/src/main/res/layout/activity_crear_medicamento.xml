<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".actividades.CrearMateria">

    <EditText
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_sinopsis"
            app:layout_constraintStart_toStartOf="@+id/txt_actoresprincipales"
            app:layout_constraintEnd_toEndOf="@+id/txt_actoresprincipales" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_actoresprincipales" app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:layout_width="240dp"
            android:layout_height="39dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_actoresprincipales"
            app:layout_constraintStart_toStartOf="@+id/txt_ratingPeli"
            app:layout_constraintEnd_toEndOf="@+id/txt_ratingPeli" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_ratingPeli"/>
    <EditText
            android:layout_width="242dp"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_nuevaPelicula"
            android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView23"
            app:layout_constraintBottom_toBottomOf="@+id/textView23"
            app:layout_constraintStart_toEndOf="@+id/textView23" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.476"/>
    <EditText
            android:layout_width="237dp"
            android:layout_height="41dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txt_anioLanzamiento"
            app:layout_constraintStart_toStartOf="@+id/txt_nuevaPelicula"
            app:layout_constraintEnd_toEndOf="@+id/txt_nuevaPelicula" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_nuevaPelicula"/>
    <EditText
            android:layout_width="240dp"
            android:layout_height="41dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txt_ratingPeli"
            app:layout_constraintStart_toStartOf="@+id/txt_anioLanzamiento"
            app:layout_constraintEnd_toEndOf="@+id/txt_anioLanzamiento" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_anioLanzamiento" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Registrar Película"
            android:layout_width="203dp"
            android:layout_height="51dp"
            android:id="@+id/btn_ins_med"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/txt_latitud"
            android:textStyle="bold" android:textAllCaps="true" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="243dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="@+id/txt_sinopsis" android:id="@+id/txt_longitud"
            android:hint="@string/longitud" android:text="-78.459725"
            android:layout_marginEnd="48dp"
            app:layout_constraintStart_toStartOf="@+id/txt_sinopsis" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_sinopsis"/>
    <EditText
            android:layout_width="243dp"
            android:layout_height="43dp"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="@+id/txt_longitud" android:id="@+id/txt_latitud"
            android:hint="@string/latitud" android:text="-0.097662"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/txt_longitud" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_longitud"/>
    <TextView
            android:text="Nombre"
            android:layout_width="71dp"
            android:layout_height="25dp"
            android:id="@+id/textView23" android:textStyle="bold"
            android:textAllCaps="true" android:layout_marginTop="60dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="28dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Película"
            android:layout_width="113dp"
            android:layout_height="28dp"
            android:id="@+id/textView24" android:textStyle="bold"
            android:textAllCaps="true" android:textAlignment="center" android:textSize="18sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Año de Lanzamiento"
            android:layout_width="104dp"
            android:layout_height="41dp"
            android:id="@+id/textView25" android:textStyle="bold"
            android:textAllCaps="true"
            app:layout_constraintStart_toStartOf="@+id/textView23" app:layout_constraintEnd_toEndOf="@+id/textView23"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textView23"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Rating"
            android:layout_width="69dp"
            android:layout_height="22dp"
            android:id="@+id/textView26" android:textStyle="bold"
            android:textAllCaps="true"
            app:layout_constraintStart_toStartOf="@+id/textView25" app:layout_constraintEnd_toEndOf="@+id/textView25"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView25"/>
    <TextView
            android:text="Actores Princiaples"
            android:layout_width="104dp"
            android:layout_height="44dp"
            android:id="@+id/textView27" android:textStyle="bold"
            android:textAllCaps="true"
            app:layout_constraintStart_toStartOf="@+id/textView26" app:layout_constraintEnd_toEndOf="@+id/textView26"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView26"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Sinopsis"
            android:layout_width="85dp"
            android:layout_height="26dp"
            android:id="@+id/textView28" android:textAllCaps="true"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView27" app:layout_constraintEnd_toEndOf="@+id/textView27"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView27"/>
    <TextView
            android:text="@string/longitud"
            android:layout_width="89dp"
            android:layout_height="26dp"
            android:id="@+id/textView29" android:textStyle="bold"
            android:textAllCaps="true"
            app:layout_constraintStart_toStartOf="@+id/textView28" app:layout_constraintEnd_toEndOf="@+id/textView28"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView28"/>
    <TextView
            android:text="@string/latitud"
            android:layout_width="81dp"
            android:layout_height="24dp"
            android:id="@+id/textView30" android:textStyle="bold"
            android:textAllCaps="true"
            app:layout_constraintStart_toStartOf="@+id/textView29" app:layout_constraintEnd_toEndOf="@+id/textView29"
            app:layout_constraintTop_toBottomOf="@+id/textView29" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>