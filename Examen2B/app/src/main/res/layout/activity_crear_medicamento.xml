<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".actividades.CrearMateria">

    <EditText
            android:layout_width="350dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_sinopsis"
            app:layout_constraintStart_toStartOf="@+id/txt_actoresprincipales"
            app:layout_constraintEnd_toEndOf="@+id/txt_actoresprincipales" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_actoresprincipales" app:layout_constraintHorizontal_bias="0.0"
            android:hint="Descripción" android:textSize="16sp"/>
    <EditText
            android:layout_width="248dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_actoresprincipales"
            app:layout_constraintStart_toStartOf="@+id/txt_ratingPeli"
            app:layout_constraintEnd_toEndOf="@+id/txt_ratingPeli" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_ratingPeli" android:hint="Activo" android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="355dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_nuevaPelicula"
            android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:hint="Nombre" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView24" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textSize="16sp"/>
    <EditText
            android:layout_width="355dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txt_anioLanzamiento"
            app:layout_constraintStart_toStartOf="@+id/txt_nuevaPelicula"
            app:layout_constraintEnd_toEndOf="@+id/txt_nuevaPelicula" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/txt_nuevaPelicula"
            android:hint="Fecha de Creación" android:textSize="16sp"/>
    <EditText
            android:layout_width="270dp"
            android:layout_height="42dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txt_ratingPeli"
            app:layout_constraintStart_toStartOf="@+id/txt_anioLanzamiento"
            app:layout_constraintEnd_toEndOf="@+id/txt_anioLanzamiento" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_anioLanzamiento" app:layout_constraintHorizontal_bias="0.0"
            android:hint="Número de horas por Semana" android:textSize="16sp"/>
    <Button
            android:text="Registrar Materia"
            android:layout_width="232dp"
            android:layout_height="49dp"
            android:id="@+id/btn_ins_med"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/txt_latitud"
            android:textStyle="bold" android:textAllCaps="true" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textSize="16sp"/>
    <EditText
            android:layout_width="176dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_longitud"
            android:hint="@string/longitud" android:text="-78.459725"
            app:layout_constraintStart_toStartOf="@+id/txt_sinopsis"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/txt_sinopsis"
            app:layout_constraintEnd_toEndOf="@+id/txt_sinopsis" app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:layout_width="176dp"
            android:layout_height="39dp"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="@+id/txt_longitud" android:id="@+id/txt_latitud"
            android:hint="@string/latitud" android:text="-0.097662"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/txt_longitud" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/txt_longitud"
            android:textSize="16sp"/>
    <TextView
            android:text="Materia"
            android:layout_width="113dp"
            android:layout_height="28dp"
            android:id="@+id/textView24" android:textStyle="bold"
            android:textAllCaps="true" android:textAlignment="center" android:textSize="18sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/longitud"
            android:layout_width="94dp"
            android:layout_height="26dp"
            android:id="@+id/textView29" android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@+id/txt_longitud"
            app:layout_constraintBottom_toBottomOf="@+id/txt_longitud" android:layout_marginEnd="80dp"
            app:layout_constraintEnd_toStartOf="@+id/txt_longitud"/>
    <TextView
            android:text="@string/latitud"
            android:layout_width="95dp"
            android:layout_height="25dp"
            android:id="@+id/textView30" android:textStyle="bold"
            android:textAllCaps="true"
            app:layout_constraintStart_toStartOf="@+id/textView29" app:layout_constraintEnd_toEndOf="@+id/textView29"
            app:layout_constraintTop_toBottomOf="@+id/textView29" android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>