<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".actividades.CrearEstudiante">

    <EditText
            android:layout_width="249dp"
            android:layout_height="44dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/dp_fechaNacimientoActor"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_apellidoActor"
            app:layout_constraintStart_toStartOf="@+id/txt_apellidoActor"
            app:layout_constraintEnd_toEndOf="@+id/txt_apellidoActor"/>
    <EditText
            android:layout_width="252dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_nombreActor"
            android:layout_marginEnd="36dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView8" app:layout_constraintBottom_toBottomOf="@+id/textView8"
            app:layout_constraintVertical_bias="0.0"
    />
    <EditText
            android:layout_width="251dp"
            android:layout_height="43dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_apellidoActor"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_nombreActor"
            app:layout_constraintStart_toStartOf="@+id/txt_nombreActor"
            app:layout_constraintEnd_toEndOf="@+id/txt_nombreActor" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Registrar Actor"
            android:layout_width="200dp"
            android:layout_height="46dp"
            android:id="@+id/btn_ins_pac"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/sw_retiradoPaciente"
            app:layout_constraintStart_toStartOf="@+id/sw_retiradoPaciente" app:layout_constraintEnd_toEndOf="@+id/sw_retiradoPaciente"
            app:layout_constraintHorizontal_bias="0.493" android:textStyle="bold" android:textAllCaps="true"
            android:textAlignment="center"/>
    <EditText
            android:layout_width="255dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txt_numeroPeliculas"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/dp_fechaNacimientoActor"
            app:layout_constraintStart_toStartOf="@+id/dp_fechaNacimientoActor"
            app:layout_constraintEnd_toEndOf="@+id/dp_fechaNacimientoActor" app:layout_constraintHorizontal_bias="0.0"/>
    <Switch
            android:text="Retirado"
            android:layout_width="229dp"
            android:layout_height="30dp"
            android:id="@+id/sw_retiradoPaciente"
            app:layout_constraintTop_toBottomOf="@+id/txt_numeroPeliculas" android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:checked="false"
            app:layout_constraintHorizontal_bias="0.498" android:textStyle="bold" android:textAlignment="center"
            android:textAllCaps="true"/>
    <TextView
            android:text="Nombres"
            android:layout_width="76dp"
            android:layout_height="30dp"
            android:id="@+id/textView8" android:textStyle="bold"
            android:textAllCaps="true" app:layout_constraintTop_toBottomOf="@+id/textView19"
            android:layout_marginTop="16dp" android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent" android:gravity="center"/>
    <TextView
            android:text="Actor"
            android:layout_width="131dp"
            android:layout_height="29dp"
            android:id="@+id/textView19" android:textStyle="bold"
            android:textAllCaps="true" android:textAlignment="center" android:textSize="18sp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.492"/>
    <TextView
            android:text="Apellidos"
            android:layout_width="76dp"
            android:layout_height="24dp"
            android:id="@+id/textView20" android:textStyle="bold"
            android:textAllCaps="true" android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/textView8" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/textView8" app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:layout_marginTop="40dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Fecha Nacimiento"
            android:layout_width="95dp"
            android:layout_height="45dp"
            android:id="@+id/textView21" android:textStyle="bold"
            android:textAllCaps="true"
            app:layout_constraintStart_toStartOf="@+id/textView20" app:layout_constraintEnd_toEndOf="@+id/textView20"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textView20"
            app:layout_constraintHorizontal_bias="0.368"/>
    <TextView
            android:text="Número Películas"
            android:layout_width="88dp"
            android:layout_height="46dp"
            android:id="@+id/textView22" android:textStyle="bold"
            android:textAllCaps="true" android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="@+id/textView21" app:layout_constraintEnd_toEndOf="@+id/textView21"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView21"
            app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>