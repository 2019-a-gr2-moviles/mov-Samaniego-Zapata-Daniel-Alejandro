<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".actividades.CrearEstudiante">

    <EditText
            android:layout_width="249dp"
            android:layout_height="44dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/dp_fechaNacimientoActor"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_apellidoActor"
            app:layout_constraintStart_toStartOf="@+id/txt_apellidoActor"
            app:layout_constraintEnd_toEndOf="@+id/txt_apellidoActor" android:hint="Fecha de Nacimiento"
            app:layout_constraintHorizontal_bias="0.0" android:textSize="16sp"/>
    <EditText
            android:layout_width="311dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_nombreActor"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:hint="Nombres" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView19" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textSize="16sp"/>
    <EditText
            android:layout_width="311dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_apellidoActor"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_nombreActor"
            app:layout_constraintStart_toStartOf="@+id/txt_nombreActor"
            app:layout_constraintEnd_toEndOf="@+id/txt_nombreActor" app:layout_constraintHorizontal_bias="0.0"
            android:hint="Apellidos" android:textSize="16sp"/>
    <Button
            android:text="Registrar Estudiante"
            android:layout_width="257dp"
            android:layout_height="45dp"
            android:id="@+id/btn_ins_pac"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/sw_retiradoPaciente"
            app:layout_constraintStart_toStartOf="@+id/sw_retiradoPaciente"
            app:layout_constraintEnd_toEndOf="@+id/sw_retiradoPaciente"
            app:layout_constraintHorizontal_bias="0.493" android:textStyle="bold" android:textAllCaps="true"
            android:textAlignment="center" android:textSize="16sp"/>
    <EditText
            android:layout_width="255dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txt_numeroPeliculas"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/dp_fechaNacimientoActor"
            app:layout_constraintStart_toStartOf="@+id/dp_fechaNacimientoActor"
            app:layout_constraintEnd_toEndOf="@+id/dp_fechaNacimientoActor" app:layout_constraintHorizontal_bias="0.0"
            android:hint="Semestre Actual" android:textSize="16sp"/>
    <Switch
            android:text="Graduado"
            android:layout_width="229dp"
            android:layout_height="30dp"
            android:id="@+id/sw_retiradoPaciente"
            app:layout_constraintTop_toBottomOf="@+id/txt_numeroPeliculas" android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:checked="false"
            android:textStyle="bold" android:textAlignment="center"
            android:textAllCaps="true" android:textSize="16sp"/>
    <TextView
            android:text="Estudiante"
            android:layout_width="135dp"
            android:layout_height="33dp"
            android:id="@+id/textView19" android:textStyle="bold"
            android:textAllCaps="true" android:textAlignment="center" android:textSize="18sp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.492"/>
</androidx.constraintlayout.widget.ConstraintLayout>