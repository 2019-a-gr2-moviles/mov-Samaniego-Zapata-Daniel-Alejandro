<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".actividades.GestionMaterias" android:background="#8AAEE6">

    <Button
            android:text="Registrar Película"
            android:layout_width="250dp"
            android:layout_height="53dp"
            android:id="@+id/btn_registrarPelicula"
            app:layout_constraintStart_toStartOf="@+id/btn_gestionarPeliculas"
            app:layout_constraintEnd_toEndOf="@+id/btn_gestionarPeliculas" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_gestionarPeliculas"
            android:textStyle="bold" android:textAlignment="center" android:textAllCaps="true" android:textSize="18sp"/>
    <Button
            android:text="Gestionar Películas"
            android:layout_width="266dp"
            android:layout_height="65dp"
            android:id="@+id/btn_gestionarPeliculas"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.496"
            android:textStyle="bold" android:textAllCaps="true" android:textAlignment="center" android:textSize="18sp"
            android:layout_marginTop="156dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/btn_mapa"
            android:layout_width="237dp"
            android:layout_height="50dp"
            android:id="@+id/btn_mapa"
            app:layout_constraintEnd_toEndOf="@+id/btn_registrarPelicula"
            app:layout_constraintStart_toStartOf="@+id/btn_registrarPelicula"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/btn_registrarPelicula"
            android:textStyle="bold" android:textAllCaps="true" android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>