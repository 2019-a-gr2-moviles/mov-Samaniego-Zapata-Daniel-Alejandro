<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".actividades.GestionEstudiante">

    <Button
            android:text="Crear Actor"
            android:layout_width="190dp"
            android:layout_height="52dp"
            android:id="@+id/btn_crearActor"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/btn_gestionActores"
            app:layout_constraintStart_toStartOf="@+id/btn_gestionActores"
            app:layout_constraintEnd_toEndOf="@+id/btn_gestionActores"
            android:textStyle="bold" android:textSize="18sp" android:textAlignment="center"/>
    <Button
            android:text="Gestionar Actores"
            android:layout_width="269dp"
            android:layout_height="51dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btn_gestionActores" android:layout_marginTop="184dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold" android:textAlignment="center" android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.496"/>
</androidx.constraintlayout.widget.ConstraintLayout>