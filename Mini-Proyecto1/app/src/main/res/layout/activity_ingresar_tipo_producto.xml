<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ingresarTipoProducto">

    <Button
            android:text="Percha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/percha"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="25dp" android:layout_marginStart="25dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="298dp" android:layout_marginRight="298dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout2" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="26dp" app:layout_constraintTop_toBottomOf="@+id/textInputLayout"/>
    <Button
            android:text="Tipo de Producto:"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:id="@+id/nombreTipoProducto"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="46dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="143dp"
            android:layout_marginRight="143dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout" app:layout_constraintHorizontal_bias="0.0"/>
    <android.support.design.widget.TextInputLayout
            android:layout_width="395dp"
            android:layout_height="62dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/nombreTipoProducto"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:id="@+id/textInputLayout"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/percha">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej. AntibiÃ³tico, croquetas, etc."
                android:id="@+id/layoutTipoProducto"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="395dp"
            android:layout_height="64dp"
            android:id="@+id/textInputLayout2"
            app:layout_constraintTop_toBottomOf="@+id/percha" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginTop="16dp">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej. 1, 2, 3"/>
    </android.support.design.widget.TextInputLayout>
    <Button
            android:text="Guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guardar" android:layout_marginTop="77dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="25dp" android:layout_marginStart="25dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="298dp" android:layout_marginRight="298dp"
    />
</android.support.constraint.ConstraintLayout>