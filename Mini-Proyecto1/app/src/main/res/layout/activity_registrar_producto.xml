<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistrarProducto">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:text="Nombre Antibiotico:"
            android:ems="10"
            android:id="@+id/editText"
            tools:layout_editor_absoluteY="136dp" tools:layout_editor_absoluteX="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:inputType="textPersonName"
            android:text="Fecha Expiracion:"
            android:ems="10"
            android:id="@+id/editText2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="182dp" android:layout_marginRight="182dp" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout2"/>
    <android.support.design.widget.TextInputLayout
            android:layout_width="395dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="211dp"
            tools:layout_editor_absoluteX="8dp" android:id="@+id/textInputLayout">

        <android.support.design.widget.TextInputEditText
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:hint="hint" android:id="@+id/layoutNomAntibiotico"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="395dp"
            android:layout_height="54dp" tools:layout_editor_absoluteY="416dp"
            tools:layout_editor_absoluteX="8dp" android:id="@+id/textInputLayout2">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="hint"/>
    </android.support.design.widget.TextInputLayout>
</android.support.constraint.ConstraintLayout>