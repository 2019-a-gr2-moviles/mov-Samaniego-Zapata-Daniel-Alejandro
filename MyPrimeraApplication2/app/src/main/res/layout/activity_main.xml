<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="109dp"
            android:layout_height="29dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:text="@string/hola_mundo"
            android:textColor="@color/colorHolaMundo" android:id="@+id/textView"
            app:layout_constraintHorizontal_bias="0.36" app:layout_constraintVertical_bias="0.498"/>
    <Button
            android:text="Actividad 2"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:id="@+id/btn_actividad_dos"
            android:layout_marginBottom="72dp"
            app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView"/>
    <Button
            android:text="Parcelable"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:id="@+id/btn_parcelable" app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <Button
            android:text="Adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_adapter"
            app:layout_constraintTop_toTopOf="@+id/btn_parcelable"
            app:layout_constraintBottom_toBottomOf="@+id/btn_parcelable" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/btn_parcelable" android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"/>
    <Button
            android:text="Recycler View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_recyclerView" app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginLeft="48dp" android:layout_marginStart="48dp"
            app:layout_constraintTop_toTopOf="@+id/textView" app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.473"/>

</android.support.constraint.ConstraintLayout>