<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:context=".Login" android:background="#162033">
    <TextView
            android:text="Correo"
            android:layout_width="270dp"
            android:layout_height="37dp"
            android:id="@+id/txt_correo" android:background="#1F293A"
            android:textColor="#85FFFFFF" android:layout_marginTop="220dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.456"/>
    <TextView
            android:text="Contraseña"
            android:layout_width="273dp"
            android:layout_height="33dp"
            android:id="@+id/txt_contrasenia" android:background="#1F293A"
            android:textColor="#85FFFFFF" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_correo"
            app:layout_constraintStart_toStartOf="@+id/txt_correo" app:layout_constraintEnd_toEndOf="@+id/txt_correo"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Ingresar"
            android:layout_width="274dp"
            android:layout_height="45dp"
            android:id="@+id/btn_ingresar" android:background="#F30C0C"
            android:textColor="#FBFCFD" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_contrasenia"
            app:layout_constraintStart_toStartOf="@+id/txt_contrasenia"
            app:layout_constraintEnd_toEndOf="@+id/txt_contrasenia"/>
    <Button
            android:text="Recuperar Contraseña"
            android:layout_width="192dp"
            android:layout_height="41dp"
            android:id="@+id/btn_recuperarContrasenia"
            android:background="#162033" android:textColor="#7A1F2F" android:textIsSelectable="true"
            android:layout_marginTop="55dp" app:layout_constraintTop_toBottomOf="@+id/btn_ingresar"
            app:layout_constraintStart_toStartOf="@+id/btn_ingresar"
            app:layout_constraintEnd_toEndOf="@+id/btn_ingresar" app:layout_constraintHorizontal_bias="0.536"
    />
    <TextView
            android:text="¿No eres miembro aún?"
            android:layout_width="159dp"
            android:layout_height="22dp"
            android:id="@+id/txt_miembro" android:textColor="#85FFFFFF" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="48dp" android:layout_marginStart="48dp" android:layout_marginBottom="76dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/btn_recuperarContrasenia"
            app:layout_constraintVertical_bias="0.286"/>
    <Button
            android:text="Registrate aquí"
            android:layout_width="124dp"
            android:layout_height="41dp"
            android:id="@+id/btn_registrateAqui" android:background="#162033"
            android:textColor="#7A1F2F" android:textIsSelectable="true" android:layout_marginEnd="88dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="88dp"
            app:layout_constraintStart_toEndOf="@+id/txt_miembro" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="68dp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_miembro" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/txt_miembro" app:layout_constraintVertical_bias="0.137"/>
</android.support.constraint.ConstraintLayout>