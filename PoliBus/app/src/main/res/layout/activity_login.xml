<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login" android:background="#162033">
    <TextView
            android:text="Correo"
            android:layout_width="164dp"
            android:layout_height="25dp" tools:layout_editor_absoluteY="340dp"
            tools:layout_editor_absoluteX="85dp" android:id="@+id/txt_correo" android:background="#1F293A"
            android:textColor="#85FFFFFF"/>
    <TextView
            android:text="Contraseña"
            android:layout_width="165dp"
            android:layout_height="29dp" tools:layout_editor_absoluteY="378dp"
            tools:layout_editor_absoluteX="85dp" android:id="@+id/txt_contrasenia" android:background="#1F293A"
            android:textColor="#85FFFFFF"/>
    <Button
            android:text="Ingresar"
            android:layout_width="274dp"
            android:layout_height="45dp" tools:layout_editor_absoluteY="447dp"
            tools:layout_editor_absoluteX="65dp" android:id="@+id/btn_ingresar" android:background="#F30C0C"
            android:textColor="#FBFCFD"/>
    <Button
            android:text="Recuperar Contraseña"
            android:layout_width="192dp"
            android:layout_height="41dp" tools:layout_editor_absoluteY="569dp"
            tools:layout_editor_absoluteX="109dp" android:id="@+id/btn_recuperarContrasenia"
            android:background="#162033" android:textColor="#7A1F2F" android:textIsSelectable="true"/>
    <TextView
            android:text="¿No eres miembro aún?"
            android:layout_width="159dp"
            android:layout_height="22dp" tools:layout_editor_absoluteY="632dp"
            tools:layout_editor_absoluteX="40dp" android:id="@+id/textView4" android:textColor="#85FFFFFF"/>
    <Button
            android:text="Registrate aquí"
            android:layout_width="130dp"
            android:layout_height="41dp" tools:layout_editor_absoluteY="621dp"
            tools:layout_editor_absoluteX="199dp" android:id="@+id/btn_registrateAqui" android:background="#162033"
            android:textColor="#7A1F2F" android:textIsSelectable="true"/>
</android.support.constraint.ConstraintLayout>