<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistroAdmin" android:background="#162033">

    <ImageView
            android:layout_width="128dp"
            android:layout_height="124dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_registro"/>
    <TextView
            android:text="User name"
            android:layout_width="167dp"
            android:layout_height="34dp"
            android:id="@+id/textView2" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.452"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintBottom_toBottomOf="@+id/imageView"
            android:background="#1F293A" android:textColor="#85FFFFFF" app:layout_constraintVertical_bias="0.511"/>
    <TextView
            android:text="Correo"
            android:layout_width="260dp"
            android:layout_height="22dp"
            android:id="@+id/txt_correoAdmin" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.158" android:textColor="#85FFFFFF" android:background="#1F293A"/>
    <TextView
            android:text="Contraseña"
            android:layout_width="254dp"
            android:layout_height="24dp"
            android:id="@+id/txt_contraseniaAdmin" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_correoAdmin"
            app:layout_constraintStart_toStartOf="@+id/txt_correoAdmin"
            app:layout_constraintEnd_toEndOf="@+id/txt_correoAdmin" android:textColor="#85FFFFFF"
            android:background="#1F293A"/>
    <TextView
            android:text="Confirmar contraseña"
            android:layout_width="258dp"
            android:layout_height="23dp"
            android:id="@+id/txt_confirmarContraseniaAdmin"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_contraseniaAdmin"
            app:layout_constraintStart_toStartOf="@+id/txt_contraseniaAdmin"
            app:layout_constraintEnd_toEndOf="@+id/txt_contraseniaAdmin" android:textColor="#85FFFFFF"
            android:background="#1F293A"/>
    <TextView
            android:text="¿Cuál es tu rol?"
            android:layout_width="123dp"
            android:layout_height="22dp"
            android:id="@+id/txt_rol" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_confirmarContraseniaAdmin"
            app:layout_constraintStart_toStartOf="@+id/txt_confirmarContraseniaAdmin"
            app:layout_constraintEnd_toEndOf="@+id/txt_confirmarContraseniaAdmin"
            app:layout_constraintHorizontal_bias="0.0" android:background="#1F293A" android:textColor="#85FFFFFF"
            android:textSize="16sp"/>
    <ImageView
            android:layout_width="103dp"
            android:layout_height="83dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_rol"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <TextView
            android:text="ADMINISTRACIÓN"
            android:layout_width="120dp"
            android:layout_height="22dp"
            android:id="@+id/textView7" app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/imageView2" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" android:textColor="#ABAA9A"
            android:background="#162033" android:gravity="center"/>
    <TextView
            android:text="CÓDIGO"
            android:layout_width="157dp"
            android:layout_height="29dp"
            android:id="@+id/txt_codigo" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="@+id/textView7" android:background="#C7C7C7" android:textColor="#919191"
            android:textSize="14sp" android:gravity="center"/>
    <Button
            android:text="ACEPTAR"
            android:layout_width="220dp"
            android:layout_height="34dp"
            android:id="@+id/btn_aceptarAdmin" app:layout_constraintStart_toStartOf="@+id/txt_codigo"
            app:layout_constraintEnd_toEndOf="@+id/txt_codigo" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_codigo" android:textColor="#F3FCFE"
            android:background="#E50808"/>
    <TextView
            android:text="REGISTRO"
            android:layout_width="364dp"
            android:layout_height="52dp"
            android:id="@+id/txt_registro" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.333"
            android:background="#393B4D" android:textColor="#E9E9E0" android:textSize="20sp"
            android:textStyle="bold" android:textIsSelectable="true" android:gravity="center"/>
</android.support.constraint.ConstraintLayout>